# Casa del Pollo Campaign Console â€” sample env file
# Copy next to app.py (never commit real secrets) and replace every
# placeholder value with production-ready credentials.

APP_ENV=development
FLASK_ENV=development

# Generate at least 64 random bytes (e.g., `python -c "import secrets; print(secrets.token_hex(32))"`)
APP_SECRET_KEY=replace-with-64-byte-hex
LOG_STREAM_TOKEN_SECRET=replace-with-log-stream-secret
APP_PORTAL_HOSTNAME=console.casadelpollo.com
LOG_STREAM_TOKEN_TTL_SECONDS=3600

# Database (shared with the unsubscribe PHP app)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=casadelpollo
DB_USER=console_app
DB_PASS=replace-with-db-password
DB_CUSTOMER_TABLE=CUSTOMERS
DB_TEST_CUSTOMER_TABLE=TESTCUSTOMERS

# SMTP for outbound campaigns
SMTP_HOST=smtp.example.com
SMTP_PORT=587
EMAIL_USER=marketing@example.com
EMAIL_PASSWORD=replace-with-app-password
FROM_EMAIL=marketing@example.com
FROM_NAME="Casa del Pollo"

# Unsubscribe links embedded into emails
BASE_URL_PUBLIC=https://unsubscribe.example.com
UNSUBSCRIBE_PATH=/unsubscribe

# Sending defaults
DEFAULT_BATCH_SIZE=50
DEFAULT_BATCH_DELAY_MS=200

# Optional tunables
WELCOME_EMAIL_TEMPLATE=welcome.html
AUTH_SESSION_HOURS=12
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_LOCKOUT_MINUTES=15
AUTH_MIN_PASSWORD_LENGTH=12
